@model DigitalLife_Work.Models.VM.ProjectClientViewModelcs
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 my-4">
        <div class="card shadow mb-4">
            <div class="card-header py-4">
                User Add <a asp-action="Index" class="float-right btn btn-outline-secondary">Back to index</a>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="@Model.Invoice.DateTime" class="control-label">Date</label>
                        <input type="date" asp-for="@Model.Invoice.DateTime" value="@DateTime.Now" min="2010-01-01" max="2030-12-31" class="form-control" required />
                        <span asp-validation-for="@Model.Invoice.DateTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Client Name </label>
                        <select name="clientid"  class="form-control">

                            <option value="0">Client choose</option>
                            @foreach (var item in Model.Clients)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }

                        </select>
                        <span asp-validation-for="@Model.Clients" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label class="control-label" asp-for="@Model.Invoice.NetAmount">Net Amount</label>
                        <input type="number" asp-for="@Model.Invoice.NetAmount" class="form-control" />
                        <span asp-validation-for="@Model.Invoice.NetAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="@Model.Invoice.TaxAmount">Tax Amount</label>
                        <input type="number" asp-for="@Model.Invoice.TaxAmount" class="form-control" />
                        <span asp-validation-for="@Model.Invoice.TaxAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="@Model.Invoice.TotalAmount">Total Amount</label>
                        <input type="number" asp-for="@Model.Invoice.TotalAmount" class="form-control" />
                        <span asp-validation-for="@Model.Invoice.TotalAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="@Model.Invoice.Note">Not</label>
                        <input type="text" asp-for="@Model.Invoice.Note" class="form-control" />
                        <span asp-validation-for="@Model.Invoice.Note" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Project Name </label>
                        <select name="projectid" class="form-control">
                            <option value="0">Project choose</option>
                            @foreach (var item in Model.Projects)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.Projects" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Suret Qutusu</label>
                        <select name="statusid" class="form-control">
                            <option value="0">Sec</option>
                            @foreach (var item in Enum.GetValues(typeof(DigitalLife_Work.Models.BLL.PaymentStatus)))
                            {
                                <option value="@Convert.ToInt32(((DigitalLife_Work.Models.BLL.PaymentStatus)item))">@(((DigitalLife_Work.Models.BLL.PaymentStatus)item).ToString())</option>

                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

